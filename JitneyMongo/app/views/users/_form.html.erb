<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="alert">
     	<% if flash[:notice]%>
		<h1><%= flash[:notice]%></h2>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
